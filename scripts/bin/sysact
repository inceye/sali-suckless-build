#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo zzz" ;;
	*openrc*) reb="sudo openrc-shutdown -r"; shut="sudo openrc-shutdown -p" ;;
esac

cmds="\
ğŸ”’ lock		slock
â¸ï¸ suspend	systemctl suspend
ğŸšª leave dwm	kill -TERM $(pidof -s dwm)
â™» renew dwm	kill -HUP $(pidof -s dwm)
ğŸ» hibernate	${hib:-sudo hibernate}
ğŸ”ƒ reboot	${reb:-sudo reboot}
ğŸ–¥ shutdown	${shut:-sudo shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -l 10)" || exit 1

`echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-`
